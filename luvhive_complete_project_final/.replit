entrypoint = "main.py"
modules = ["python-3.11", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "glibcLocales", "libxcrypt", "zip"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "bash run_forever.sh"]
deploymentTarget = "gce"
ignorePorts = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run Bot (Polling)"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "RUN_MODE=polling python main.py"

[[workflows.workflow]]
name = "FastAPI Server"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app:app --reload --host 0.0.0.0 --port 8000"

[[workflows.workflow]]
name = "WebApp Dev"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn webapp:app --reload --host 0.0.0.0 --port 8000"

[[workflows.workflow]]
name = "Full Stack Dev"
author = 46051617
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app:app --reload --host 0.0.0.0 --port 8000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd luvhive-web && npm run dev -- --host 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Social Media Server"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"from social_media import init_social_tables; init_social_tables()\" && uvicorn social_media:app --reload --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "LuvHive WebApp"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python luv_hive.py"

[[workflows.workflow]]
name = "Full Stack LuvHive"
author = 46051617
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app:app --reload --host 0.0.0.0 --port 8000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd luvhive-web && npm run dev -- --host 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TelegramBot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "API Server"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main_api:app --reload --host 0.0.0.0 --port 8080"

[[workflows.workflow]]
name = "Mini App Complete"
author = 46051617
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_miniapp.py"

[[workflows.workflow]]
name = "TelegramBot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ALLOW_INSECURE_TRIAL=1 python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd webapp && npm run dev -- --host 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ALLOW_INSECURE_TRIAL=1 uvicorn api_server:app --host 0.0.0.0 --port 8080 --reload"
waitForPort = 8080

[agent]
expertMode = true
integrations = ["javascript_mem_db==1.0.0"]

